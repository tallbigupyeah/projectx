<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/walletguide_btn_import"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="@color/theme_color"
        android:layout_centerInParent="true"
        android:background="@color/color_cecece"
        android:text="@string/walletguide_import" />

    <Button
        android:id="@+id/walletguide_btn_create"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@id/walletguide_btn_import"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:background="@color/theme_color"
        android:text="@string/walletguide_create" />
</RelativeLayout>