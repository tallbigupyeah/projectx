<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimens_16"
    android:paddingRight="@dimen/dimens_16">

    <ImageView
        android:id="@+id/item_tokenlist_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_12"
        android:layout_toRightOf="@+id/item_tokenlist_iv"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimens_4"
        android:paddingTop="@dimen/dimens_4">

        <TextView
            android:id="@+id/item_tokenlist_tv_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/item_tokenlist_tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/item_tokenlist_tv_contractaddr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="ETH"
            android:textColor="@color/txt_color_gray"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/item_tokenlist_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>