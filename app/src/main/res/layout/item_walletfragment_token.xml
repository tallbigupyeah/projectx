<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_item_singlewhite"
    android:padding="@dimen/dimens_16">

    <ImageView
        android:id="@+id/item_wallet_token_iv"
        android:layout_width="22dp"
        android:layout_height="39dp"
        android:layout_centerVertical="true"
        android:background="@drawable/wallet_token_icon" />

    <TextView
        android:id="@+id/item_wallet_token_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_8"
        android:layout_toRightOf="@id/item_wallet_token_iv"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_wallet_token_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black" />
</RelativeLayout>