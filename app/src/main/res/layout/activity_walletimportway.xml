<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray"
    android:orientation="vertical">

    <include layout="@layout/common_titlebar" />

    <RelativeLayout
        android:id="@+id/walletimportway_btn_keystore"
        android:layout_marginTop="@dimen/dimens_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/walletimportway_tip_keystore"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walletimportway_btn_prikey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/walletimportway_tip_prikey"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walletimportway_btn_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/walletimportway_tip_mnemonic"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
</LinearLayout>