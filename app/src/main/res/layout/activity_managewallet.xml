<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_gray_background"
              android:orientation="vertical">

    <include layout="@layout/common_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginTop="@dimen/dimens_12"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_address"
            android:textSize="14dp"/>


        <TextView
            android:id="@+id/walletmanage_tv_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_80"
            android:background="@color/white"
            android:paddingStart="@dimen/dimens_16"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginTop="@dimen/dimens_12"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_name"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/walletmanage_et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_80"
            android:background="@color/white"
            android:paddingStart="@dimen/dimens_16"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/walletmanage_rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_pwd_change"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walletmanage_rl_keystore_backup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginTop="@dimen/dimens_24"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_keystore_backup"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walletmanage_rl_pri_backup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_prikey_backup"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/walletmanage_rl_memorywords_backup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:background="@drawable/bg_item_singlewhite"
        android:paddingLeft="@dimen/dimens_16"
        android:paddingRight="@dimen/dimens_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wallet_memorywords_backup"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </RelativeLayout>


    <Button
        android:id="@+id/walletmanage_bt_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginLeft="@dimen/dimens_16"
        android:layout_marginRight="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_12"
        android:textColor="@color/white"
        android:background="@color/theme_color"
        android:text="@string/wallet_delete" />
</LinearLayout>